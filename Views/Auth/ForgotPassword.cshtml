@model AceAgencyMembership.Models.ForgotPasswordViewModel
@{
    ViewData["Title"] = "Forgot Password";
}

<h2 class="text-center">Forgot Password</h2>

<form method="post" class="registration-form">
    @Html.AntiForgeryToken()

    <div class="form-group">
        <label>Email:</label>
        <input type="email" asp-for="Email" required class="form-control" />
        <span asp-validation-for="Email" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">Send Reset Token</button>
</form>

<!--Link to Login-->
<div>
    <p class="text-center">Already have an account? <a asp-controller="Auth" asp-action="Login">Login here</a></p>
</div>

@if (ViewData["Message"] != null)
{
    <p class="text-center">@ViewData["Message"]</p>
}

<style>
    .registration-form {
        max-width: 500px; /* Set a max width for the form */
        margin: auto; /* Center the form */
        padding: 20px; /* Add some padding */
        border: 1px solid #ccc; /* Add a border */
        border-radius: 5px; /* Rounded corners */
        background-color: #f9f9f9; /* Light background color */
    }

    .form-group {
        margin-bottom: 15px; /* Space between form groups */
    }

    .form-control {
        width: 100%; /* Full width for inputs */
        padding: 10px; /* Padding inside inputs */
        border: 1px solid #ccc; /* Border for inputs */
        border-radius: 4px; /* Rounded corners for inputs */
    }

    .btn {
        width: 100%; /* Full width for the button */
        padding: 10px; /* Padding inside the button */
    }

    .text-center {
        text-align: center; /* Center the text */
    }
</style>